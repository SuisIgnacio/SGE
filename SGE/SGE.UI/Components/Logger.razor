@rendermode InteractiveServer 
@inject NavigationManager Navegador;

@if(visible)
{
    <div class="dialogo-contenedor">
        <div class="dialogo-contenido">
            <h3>Ingrese sus Datos</h3>
            <input placeholder="Correo" @bind="correo" class="form-control"><br>
            <input placeholder="ContraseÃ±a" @bind="contra" class="form-control"><br> 
            <button class="btn btn-primary" @onclick="Cerrar"> Aceptar </button> <br>
        </div>
    </div>
}


@code
{
    public Usuario user;
    public bool visible=true;
    public string correo;
    public string contra;
    public void Cerrar()
    {
        user=new Usuario(contra);
        user.Correo=correo;
        visible=false;
        Navegador.NavigateTo("inicio");
    }
}